# Game engine

import pygame

# initialize pygame
pygame.init()

# set up the display
screen = pygame.display.set_mode((800, 600))
pygame.display.set_caption("My Game")

# game loop
while True:
    # event loop
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            # exit the game
            pygame.quit()
            sys.exit()
    
    # update the screen
    pygame.display.update()
